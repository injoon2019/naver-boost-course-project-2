<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>MainServlet</servlet-name>
  	<display-name>MainServlet</display-name>
  	<description></description>
  	<servlet-class>com.ntscorp.project2.servlet.MainServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>TodoTypeServlet</servlet-name>
  	<display-name>TodoTypeServlet</display-name>
  	<description></description>
  	<servlet-class>com.ntscorp.project2.servlet.TodoTypeServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>TodoAddServlet</servlet-name>
  	<display-name>TodoAddServlet</display-name>
  	<description></description>
  	<servlet-class>com.ntscorp.project2.servlet.TodoAddServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>MainServlet</servlet-name>
  	<url-pattern>/main</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>TodoTypeServlet</servlet-name>
  	<url-pattern>/type</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>TodoAddServlet</servlet-name>
  	<url-pattern>/add</url-pattern>
  </servlet-mapping>
  <error-page>
  	<error-code>404</error-code>
  	<location>/error/404code.jsp</location>
  </error-page>
</web-app>